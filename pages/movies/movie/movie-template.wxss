.movie-item{
    width: 200rpx;
    display: flex;
    font-size: 26rpx;
    flex-direction: column;
    margin: 0 30rpx 0 0;
}
.movie-image{
    width:  200rpx;
    height: 280rpx;
}
.movie-name{
    margin: 20rpx 0;
    color: #999;
}
.movie-star{
    margin-bottom: 20rpx;
}
.movie-star image{
    width: 24rpx;
    height: 24rpx;
    margin-right: 3rpx;
}
.movie-star text{
    margin-left: 10rpx;
    color: #ccc;
}
