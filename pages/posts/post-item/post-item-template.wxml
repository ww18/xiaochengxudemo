<template name="postItem">
    <view class="post-list">
        <view class="post-list-title">
            <image src="{{item.avatar}}"></image>
            <text>{{item.date}}</text>
        </view>
        <image class="post-content-img" src="{{item.imgSrc}}"></image>
        <text class="post-content">{{item.detail}}</text>
        <view class="post-bottom">
            <image src="/images/icon/chat.png"></image>
            <text>{{item.collection}}</text>
            <image src="/images/icon/view.png"></image>
            <text>{{item.reading}}</text>
        </view>
    </view>
</template>